{
  "name": "lagden-validation",
  "version": "1.2.0",
  "description": "Form validation",
  "keywords": [
    "form",
    "validation",
    "html",
    "css"
  ],
  "bug": {
    "url": "https://github.com/lagden/form-validation/issues",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com",
    "url": "http://lagden.in"
  },
  "main": "dist/index.js",
  "jsnext:main": "src/index.js",
  "repository": "lagden/form-validation",
  "scripts": {
    "rollup": "BABEL_ENV=rollup rollup -c",
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=lcov | codecov",
    "pretest": "xo",
    "test": "BABEL_ENV=ava nyc ava",
    "gzip": "find ./dist -name '*.js' -type f -exec sh -c 'gzip -c --best {} > {}.gz' \\;",
    "build": "npm test && npm run rollup && npm run gzip"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "dependencies": {
    "object-assign": "4.1.0"
  },
  "devDependencies": {
    "ava": "0.17.0",
    "codecov": "1.0.1",
    "get-port": "2.1.0",
    "jsdom": "9.8.3",
    "nyc": "10.0.0",
    "pify": "2.3.0",
    "rollup": "0.36.4",
    "rollup-plugin-buble": "0.14.0",
    "rollup-plugin-commonjs": "5.0.5",
    "rollup-plugin-node-resolve": "2.0.0",
    "selenium-webdriver": "3.0.1",
    "simulant": "0.2.2",
    "xo": "0.17.1"
  },
  "xo": {
    "ignore": [
      "dist/*.js"
    ],
    "envs": [
      "es6"
    ],
    "esnext": true,
    "global": [
      "window",
      "document",
      "HTMLElement"
    ]
  },
  "babel": {
    "env": {
      "rollup": {
        "presets": [
          "es2015-rollup"
        ]
      },
      "ava": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "ava": {
    "files": [
      "test/index.js"
    ],
    "concurrency": 1,
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "files": [
    "src",
    "dist",
    "LICENSE",
    "README.md"
  ]
}
