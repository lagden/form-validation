{
  "name": "lagden-validation",
  "version": "1.0.0",
  "description": "Form validation",
  "keywords": [
    "form",
    "validation",
    "html",
    "css"
  ],
  "bug": {
    "url": "https://github.com/lagden/form-validation/issues",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com",
    "url": "http://lagden.in"
  },
  "main": "dist/index.js",
  "jsnext:main": "src/index.js",
  "repository": "lagden/form-validation",
  "scripts": {
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=lcov | codecov",
    "pretest": "xo",
    "test": "BABEL_ENV=ava nyc ava",
    "rollup": "BABEL_ENV=rollup rollup -c -o dist/index.js",
    "pretty": "esformatter -i --indent.value=\"\t\" 'dist/*.js'",
    "build": "npm test && npm run rollup && npm run pretty",
    "prepublish": "rm -rf dist && npm run build"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "ava": "0.15.1",
    "babel": "6.5.2",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-es2015-rollup": "1.1.1",
    "babel-register": "6.8.0",
    "codecov": "1.0.1",
    "esformatter": "0.9.3",
    "jsdom": "9.2.0",
    "nyc": "6.4.4",
    "rollup": "0.26.2",
    "rollup-plugin-babel": "2.4.0",
    "simulant": "0.2.2",
    "xo": "0.15.0"
  },
  "xo": {
    "ignore": [
      "dist/*.js"
    ],
    "envs": [
      "es6"
    ],
    "esnext": true,
    "global": [
      "window",
      "document",
      "HTMLElement"
    ]
  },
  "babel": {
    "env": {
      "rollup": {
        "presets": [
          "es2015-rollup"
        ]
      },
      "ava": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "ava": {
    "files": [
      "test/index.js"
    ],
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "failFast": true,
    "cacheEnabled": false
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ]
}
